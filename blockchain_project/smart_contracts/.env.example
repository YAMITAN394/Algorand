# Network Configuration
NETWORK=hardhat  # hardhat, localhost, sepolia, mainnet, etc.

# Provider URLs
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id
MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/your_infura_project_id

# Account Configuration
PRIVATE_KEY=your_private_key_here  # Used for deployments and transactions
MNEMONIC=your mnemonic phrase here  # Alternative to private key

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Gas Configuration
GAS_PRICE=auto  # in gwei, or 'auto' for network estimation
GAS_LIMIT=8000000  # gas limit for transactions

# Contract Configuration
PLATFORM_FEE_PERCENTAGE=5  # Percentage fee for the platform (e.g., 5%)
PLATFORM_FEE_RECIPIENT=0x...  # Address to receive platform fees

# Deployment Configuration
DEPLOY_MODEL_REGISTRY=true
DEPLOY_LICENSE_MANAGER=true
DEPLOY_PAYMENT_PROCESSOR=true

# Contract Addresses (filled after deployment)
MODEL_REGISTRY_ADDRESS=
LICENSE_MANAGER_ADDRESS=
PAYMENT_PROCESSOR_ADDRESS=

# IPFS Configuration (for metadata)
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Testing Configuration
FORK_ENABLED=false
FORK_BLOCK_NUMBER=latest

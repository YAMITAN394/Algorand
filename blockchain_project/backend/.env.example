# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai_model_blockchain

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=30d
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# Ethereum Configuration
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
PRIVATE_KEY=your_private_key_here  # Optional, only needed for transactions

# Contract Addresses
MODEL_REGISTRY_ADDRESS=0x...
LICENSE_MANAGER_ADDRESS=0x...
PAYMENT_PROCESSOR_ADDRESS=0x...

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Email Configuration (for password reset, notifications, etc.)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@example.com

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=5
PLATFORM_FEE_RECIPIENT=0x...

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# CORS
CORS_ORIGIN=http://localhost:3000

# GraphQL
GRAPHQL_PATH=/graphql
GRAPHQL_PLAYGROUND=true  # Set to false in production
